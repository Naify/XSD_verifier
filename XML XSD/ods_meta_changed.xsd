                              <xs:sequence>
                                <xs:element maxOccurs="1" minOccurs="1" name="attrs">
                                  <xs:complexType>
                                    <xs:sequence>
                                      <xs:element maxOccurs="unbounded" minOccurs="1" name="attr">
