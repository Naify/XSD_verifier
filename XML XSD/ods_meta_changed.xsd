                                    <xs:sequence>
                                      <xs:element maxOccurs="1" minOccurs="1" name="type">
                                        <xs:complexType>
                                          <xs:attribute name="scheme" type="xs:string" use="required" />
                                          <xs:attribute name="name" type="xs:string" use="required" />
                                        </xs:complexType>
                                      </xs:element>
                                      <xs:element maxOccurs="1" minOccurs="1" name="subjects">
