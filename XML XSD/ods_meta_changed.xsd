            <xs:sequence>
              <xs:element maxOccurs="unbounded" minOccurs="1" name="scheme">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element maxOccurs="1" minOccurs="1" name="types">
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element maxOccurs="unbounded" minOccurs="1" name="type">
