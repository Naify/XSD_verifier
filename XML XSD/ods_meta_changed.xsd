                  <xs:sequence>
                    <xs:element maxOccurs="unbounded" minOccurs="1" name="group">
                      <xs:complexType>
                        <xs:sequence minOccurs="0">
                          <xs:element maxOccurs="1" minOccurs="1" name="groups">
                            <xs:complexType>
                              <xs:sequence>
                                <xs:element maxOccurs="unbounded" minOccurs="1" name="group">
                                  <xs:complexType>
                                    <xs:attribute name="name" type="xs:string" use="required" />
