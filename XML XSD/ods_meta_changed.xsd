										<xs:simpleType>
											<xs:restriction base="xs:string">
												<xs:enumeration value="admin"/>
												<xs:enumeration value="user"/>
											</xs:restriction>
										</xs:simpleType>
									</xs:attribute>
                                  </xs:complexType>
                                </xs:element>
                              </xs:sequence>
                            </xs:complexType>
                          </xs:element>
                        </xs:sequence>
                        <xs:attribute name="name" type="xs:string" use="required" />
                      </xs:complexType>
                    </xs:element>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              <xs:element maxOccurs="1" minOccurs="1" name="groups">
